{
  "name": "electron-agent",
  "version": "1.0.0",
  "description": "Electron agent for remote screenshot and status reporting",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.example.electronagent",
    "productName": "ElectronAgent",
    "files": [
      "main.js",
      "node_modules/**"
    ],
    "extraResources": [],
    "win": {},
    "mac": {},
    "linux": {}
  },
  "dependencies": {
    "electron": "^28.0.0",
    "ws": "^8.0.0",
    "screenshot-desktop": "^2.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0"
  }
}